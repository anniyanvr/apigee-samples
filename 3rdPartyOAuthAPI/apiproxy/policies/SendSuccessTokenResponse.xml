<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="SendSuccessTokenResponse">
    <DisplayName>SendSuccessTokenResponse</DisplayName>
    <Set>
        <Payload contentType="text/html"><![CDATA[
<!DOCTYPE html>
<!DOCTYPE html>
<html>

<head>
    <title>Auth Code Response</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <style>
         pre {
            overflow-x: auto;
            white-space: pre-wrap;
            white-space: -moz-pre-wrap;
            white-space: -pre-wrap;
            white-space: -o-pre-wrap;
            word-wrap: break-word;
         }
         table {border-collapse:collapse; table-layout:fixed; width:100%;}
        table td {width:70%; word-wrap:break-word;}
      </style>
  <script type="text/javascript">
    
  </script>
</head>

<body bgcolor="#FFFFFF" text="#000000">
    <table width="100%" border="0">
        <tr>
            <td valign="top" height="700">
                <form name="form1" method="POST" action="{proxy.basepath}/token">
                    <table width="80%" border="0" align="center">
                      <input type="hidden" name="code" value="{request.queryparam.code}"</input>
                        <tr bgcolor="#CCCCCC">
                            <td colspan="2">
                                <div align="center">
                                    <b>Token Response</b>
                                </div>
                            </td>
                        </tr>
                        <tr>
                          <td>
                            <pre id="tokenResponse">
                                {response.content}
                              </pre>
                            </td>
                        </tr>
                        <tr>
                            <td><input type="submit" name="Submit" value="Call API">
                            </td>
                        </tr>
                    </table>
                </form>
            </td>
        </tr>
    </table>
</body>

</html>
		]]></Payload>
        <StatusCode>200</StatusCode>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>