<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AuthCodeResponse">
    <DisplayName>AuthCodeResponse</DisplayName>
    <Properties/>
    <Set>
        <Payload contentType="text/html"><![CDATA[
         <html>
			<head>
			<title>Auth Code Response</title>
			<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
			</head>
			
			<body bgcolor="#FFFFFF" text="#000000">
				<table width="100%" border="0">
					<tr>
						<td valign="middle" height="700">
							<form name="form1" method="POST" action="{proxy.basepath}/login">
								<input type="text" name="code" value="{request.queryparam.code}" />
			                    <input type="text" name="state" value="{request.queryparam.state}" />
							</form>
						</td>
					</tr>
				</table>
			</body>
			</html>
		]]></Payload>
        <StatusCode>200</StatusCode>
        <ReasonPhrase>Sample Login Page</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>